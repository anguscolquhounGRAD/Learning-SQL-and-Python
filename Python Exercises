    maxvalue = 0
    minimumvalue = 0
    for i in A:
        if i > maxvalue:
            maxvalue += i
        for j in A:
            if j < minimumvalue:
                print("False")
            elif j > maxvalue:
                print("True")
    return maxvalue

print(max_value(A))


def all_positive(A):
    for num in A:           #This is the correct approach AI gave me. You do not need to say print true or false
        if num < 0:
            return False
    return True

print(all_positive(A))



# 7) TASK: Build a counting arrary 


A = [1,3,5,1]
M = max(A)

def countingarry(A,M):
    blankarray = [0] * (M+1)
    for i in range(len(A)):
        blankarray[A[i]] += 1
    return blankarray
 

print(countingarry(A,M))


#8 ) TASK: Return the index of the first zero in A, if none exists, return -1

A = [3,5,0,9]  #our code should return a 2

def first_zero(A):
    for i in range(len(A)):
        if A[i] == 0:
            return i
    return "-1"    

print(first_zero(A))

#9 ) TASKL Does the array countain any duplciates?

A = [3,3,1,7,8]
M = max(A)

def has_duplicates(A, M):
    blankarray = [0] * (M+1)
    for i in range(len(A)):
        blankarray[A[i]] += 1
    for j in blankarray:
        if j > 1:
            return True
    return False

    
print(has_duplicates(A, M))

#10 ) TASK: Find the first missing positive Integer 


A = [2,5,1] 
M = max(A)

def findmissing(A):
    blankarray = [0] * (M+1)
    for i in range(len(A)):
        blankarray[A[i]] += 1                  
    for j in range(1, len(blankarray)):        #I think I was really close to solving this, tried a lot of things
        if blankarray[j] == 0:            #I got it to scan for the first 0 to appear, but I am not sure how to quote the index
            return j  #I thought I could print the length of blankarrary up to j when the programm stops and that would give index
    return (M+1)         #This is now the correct appraoch 
print(findmissing(A))




#11 ) TASK: This question; write code that sums an array until a threshold is hit

A = [2, 5, 1, 8]          

def first_sum_exceeds(A, X):
    saved = 0
    for i in range(len(A)):
        if (A[i] + A[((i+1) % 2)]) < X:
            saved += A[i] + A[i+1]           #My appraoch was wrong
    return saved


print(first_sum_exceeds(A, X)) 


#This is now the correct appraoch 


def first_sum_exceeds(A, X):
    total = 0
    for i in range(len(A)):
        total += A[i]
        if total > X:
            return i
    return -1


#12 ) TASK: #Write code so if a string has brackets either side that encapsulates the middle return TRUE
                        #brackets = ((())( would be false and ((())() would be true

brackets = "(()()())"   

length = len(brackets)

def bracketsbalance(A, length):
    firstbracket = ""
    lastbracket = ""
    for i in range(1,2):
        firstbracket = i
        return firstbracket
    for j in range(length-1,length):
        lastbracket = j
        return lastbracket                     #Wrong 
    if lastbracket == lastbracket:
        return False
    return True
    
print(bracketsbalance(A, length))
