# 1 ) TASK Count how many times X appears

A = [1,3,5,8,9]
X = 9

def count_x(A,X):               
    total = 0
    size = len(A)
    for i in range(size):
        if A[i] == 9:
            total += 1
    return total

print(count_x(A,X))
      

# 2) TASK: Count how many numbers are even

A = [1,3,5,8,9]

def count_evens(A):
    total = 0
    size = len(A)
    for i in range(size):
        if A[i] % 2 == 0:
            total += 1
    return total 


print(count_evens(A))

# 2) TASK: Sum all elements of a list

A = [1,3,5,8,9]


def sumallelements(A):
    total = 0
    size = len(A)
    for i in range(size):
        total += A[i]
    return total 


print(sumallelements(A))


# 3) TASK: Reverse a list


A = [1,3,5,8,9]                     #I meant to reverse a list but still interesting way to shift a list

def reverselist(A):
    blanklist = [0] * len(A)
    for i in range(len(A)):
        blanklist[i-1] += A[i] 
    return blanklist


print(reverselist(A))


#Trying again to reverse list with method I actually know

A = [1,3,5,8,9] 

def reverselist(A):
    blanklist = []
    for i in A:
        blanklist.insert(0, i)
    return blanklist

print(reverselist(A))


#4 ) TASK : Coutning values greater than a threshold 


A = [1,3,5,8,9] 
T = 5

def count_greater(A, T):
    total = 0
    for i in range(len(A)):
        if A[i] > 5:
            total += 1
    return total

print(count_greater(A, T))


# 5 ) TASK: Return the largest number

A = [1,3,5,8,9] 

def max_value(A):
    maxvalue = 0
    for i in A:
        if i > maxvalue:
            maxvalue += i
    return maxvalue


print(max_value(A))


# 6 ) TASK: Are all values positive?


A = [-1,3,5,8,9] 

